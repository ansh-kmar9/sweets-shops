<% layout("/layouts/boilerplate") %> 

    <!-- <h3>All Sweets</h3> -->
<style>
 #filters{
  display: flex;
  flex-wrap: wrap;
 }

 .filter{
  text-align: center;
  margin-right: 3rem;
  margin-top: 2rem;
  opacity: 0.6;
  cursor: pointer;
 }
 .filter:hover{
  opacity: 1;
  cursor: pointer;
 }

 .filter p{
  font-size: 0.9rem;
 }
</style>


<div id="filters">
   <div class="filter">
    <div> <i class="fa-solid fa-stroopwafel"></i></div>
    <p>Cookies</p>
   </div>
   <div class="filter">
    <div> <i class="fa-solid fa-cake-candles"></i></div>
    <p>Cakes</p>
   </div>
   <div class="filter">
    <div> <i class="fa-solid fa-ice-cream"></i></div>
    <p>Ice-cream</p>
   </div>
   <div class="filter">
    <div> <i class="fa-solid fa-mug-hot"></i></div>
    <p>Drinks</p>
   </div><div class="filter">
    <div> <i class="fa-solid fa-pizza-slice"></i></div>
    <p>Pizza</p>
   </div>
</div>

    <!-- <form method="GET" action="/listings/new">
      <button>Create New Listing</button>
    </form> -->

    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-4">
        <% for(let listing of allListings) { %>
            <a href="/listings/<%= listing._id %>" class="listing-link">
            <div class="card col listing-card" >
                <img src="<%= listing.image %>" class="card-img-top" alt="sweets_image" style="height: 20rem;">
                <div class="card-img-overlay"> </div>
                <div class="card-body">
                 <b> <p class="card-text"><%= listing.title %> </b><br>
                    &#8377;<%= listing.price.toLocaleString("en-IN") %> /- <br>
                    Category - <%= listing.category %> <br>
      Flavor - <%= listing.flavor %>
                </p>
                </div>
              </div>
              <% } %>
            </a>
    </div>
   

