<% layout("/layouts/boilerplate") %>
<div class="container mt-5">
    <h2 class="mb-4">Order Summary</h2>
    <form class="needs-validation" novalidate>
        <!-- Name -->
        <div class="form-group">
            <label for="name">Name</label>
            <input type="text" class="form-control" id="name" placeholder="Enter your name" required>
            <div class="invalid-feedback">Please enter a name</div>
        </div>
        <!-- Mobile Number -->
        <div class="form-group">
            <label for="mobile">Mobile Number</label>
            <input type="tel" class="form-control" id="mobile" placeholder="Enter your mobile number" required>
            <div class="invalid-feedback">Please enter Mobile Number</div>
        </div>
        <!-- Email -->
        <div class="form-group">
            <label for="email">Email address</label>
            <input type="email" class="form-control" id="email" placeholder="Enter your email" required>
            <div class="invalid-feedback">Please enter email address</div>
        </div>
        <!-- Address -->
        <div class="form-group">
            <label for="address">Address</label>
            <textarea class="form-control" id="address" rows="3" placeholder="Enter your address" required></textarea>
            <div class="invalid-feedback">Please give address</div>
        </div>
        <!-- Submit Button -->
        <button id="orderForm" type="submit" class="btn btn-primary mt-5">Place Order</button>
    </form>
</div>


